<div class="border-t-2 border-b-2 border-indigo-800 bg-engine-hoisted bg-gray-300 bg-blend-screen bg-cover bg-top bg-no-repeat text-center py-10 px-4">

  <!-- hgroup -->
  <div>
    <h1 class="tracking-tight font-extrabold text-gray-900 text-6xl">
      <%= title %>
    </h1>
    <p class="text-indigo-600 uppercase text-2xl font-extrabold tracking-wider">
      <%= subtitle %>
    </p>
    <p class="text-sm font-medium italic text-pink-600 tracking-widest">
      <%= byline %>
    </p>
  </div>
  <!-- ./hgroup -->

  <!-- hours -->
  <p class="font-light text-lg text-gray-700 mt-5 uppercase tracking-wider">
    <%= hours %>
  </p>
  <!-- ./hours -->

  <!-- address -->
  <ul class="font-light text-lg text-gray-700 mt-5">
    <li><%= site[:address] %></li>
    <li><%= "#{site[:city]} #{site[:state]} #{site[:zip]}" %></li>
    <li><%= site[:phone] %></li>
  </ul>
  <!-- ./address -->

  <!-- call-to-action -->
  <div class="my-8 flex justify-center">

    <!-- call-button -->
    <div class="rounded-md shadow">
      <a
        href="tel:360-701-4808"
        class="w-full flex items-center justify-center border border-transparent font-medium rounded-md text-gray-100 bg-indigo-600 hover:bg-indigo-700 py-4 text-lg px-10"
      >
        &nbsp;&nbsp;&nbsp;&nbsp;Call&nbsp;&nbsp;&nbsp;&nbsp;
      </a>
    </div>
    <!-- ./call-button -->

    <!-- email-button -->
    <div class="mt-0 ml-3">
      <a
        href="mailto:bryan@rodgersautorepair.com"
        class="w-full flex items-center justify-center border border-transparent font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-200 py-4 text-lg px-10"
      >
        &nbsp;&nbsp;&nbsp;&nbsp;Email&nbsp;&nbsp;&nbsp;&nbsp;
      </a>
    </div>
    <!-- ./email-button -->

  </div>
  <!-- ./call-to-action -->

</div>
